<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/disconnect_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp"
        android:background="@android:color/holo_red_dark"
        android:onClick="onClickStop"
        android:text="Disconnect"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <Button
        android:id="@+id/connect_button"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="103dp"
        android:background="@android:color/holo_red_dark"
        android:onClick="onClickStart"
        android:text="Connect"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="false"
        android:layout_centerVertical="false"
        android:layout_marginTop="20dp"
        android:autoText="false"
        android:text="My Wireless Charge"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/connect_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="199dp"
        android:hint="@string/charging_status_text"
        android:text=""
        android:textSize="24sp" />

    <TextView
        android:id="@+id/data_text"
        android:layout_width="298dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/connect_status"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:hint="@string/data_text"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:text=""
        android:textSize="20sp" />

    <TextView
        android:id="@+id/data_text2"
        android:layout_width="298dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/data_text"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:hint="@string/data_text"
        android:maxLines="1"
        android:text=""
        android:textSize="20sp" />

    <TextView
        android:id="@+id/data_text3"
        android:layout_width="298dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/data_text2"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:hint="@string/data_text"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:text=""
        android:textSize="20sp" />

    <TextView
        android:id="@+id/data_text4"
        android:layout_width="298dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/data_text3"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:hint="@string/data_text"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:text=""
        android:textSize="20sp" />

</RelativeLayout>